---
/**
 * Footer – Facebook CTA + copyright
 */
import siteData from '../data/site.json';
---

<footer class="footer" id="footer">
  <div class="container">
    <div class="footer__cta">
      <h2>Sledujte nás</h2>
      <p>Budeme vás informovat o průběhu kampaně, novinkách a akcích.</p>
      <a href={siteData.facebook.url} target="_blank" rel="noopener" class="btn btn--facebook">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
        </svg>
        {siteData.facebook.label}
      </a>
    </div>

    <div class="footer__bottom">
      <p>{siteData.footer.copyright}</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-light);
    color: var(--color-navy);
    padding: var(--space-2xl) 0 var(--space-md);
  }

  .footer__cta {
    text-align: center;
    margin-bottom: var(--space-xl);
  }

  .footer__cta h2 {
    color: var(--color-navy);
    margin-bottom: var(--space-xs);
  }

  .footer__cta p {
    margin: 0 auto var(--space-md);
    opacity: 0.75;
  }

  .footer__bottom {
    text-align: center;
    padding-top: var(--space-md);
    border-top: 1px solid rgba(10, 37, 64, 0.08);
  }

  .footer__bottom p {
    font-size: 0.85rem;
    opacity: 0.5;
    margin: 0 auto;
  }
</style>
