---
/**
 * ProgramCard â€“ individual program point
 */
interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="program-card">
  <div class="program-card__icon">{icon}</div>
  <h3 class="program-card__title">{title}</h3>
  <p class="program-card__desc">{description}</p>
</div>

<style>
  .program-card {
    background: var(--color-white);
    border: 1px solid rgba(10, 37, 64, 0.08);
    border-radius: var(--radius);
    padding: var(--space-md);
    transition: all var(--transition);
    box-shadow: var(--shadow);
  }

  .program-card:hover {
    background: rgba(174, 210, 75, 0.08);
    border-color: rgba(174, 210, 75, 0.3);
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .program-card__icon {
    font-size: 2.5rem;
    margin-bottom: var(--space-sm);
  }

  .program-card__title {
    font-size: 1.1rem;
    margin-bottom: var(--space-xs);
    color: var(--color-navy);
  }

  .program-card__desc {
    font-size: 0.95rem;
    line-height: 1.65;
    opacity: 0.85;
    color: var(--color-navy);
    opacity: 0.7;
  }
</style>
