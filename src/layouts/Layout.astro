---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'Za zdraví Broumov', description = 'Sdružení nezávislých kandidátů pro lepší Broumov.' } = Astro.props;
---

<!doctype html>
<html lang="cs">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0A2540" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="https://use.typekit.net/vse3uiw.css" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
